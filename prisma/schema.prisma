generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Client {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  phone       String?
  company     String?
  address     String?
  city        String?
  state       String?
  zipCode     String?
  country     String?  @default("US")
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  orders      Order[]

  @@map("clients")
}

model Product {
  id          String           @id @default(cuid())
  name        String
  description String?
  category    ProductCategory
  basePrice   Float
  isActive    Boolean          @default(true)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  
  variants    ProductVariant[]

  @@map("products")
}

model ProductVariant {
  id          String      @id @default(cuid())
  productId   String
  size        Size
  color       String
  fabricType  FabricType
  priceAdjust Float       @default(0)
  sku         String      @unique
  stockQty    Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  product     Product     @relation(fields: [productId], references: [id], onDelete: Cascade)
  orderItems  OrderItem[]

  @@map("product_variants")
}

model Order {
  id              String         @id @default(cuid())
  clientId        String
  orderNumber     String         @unique
  status          OrderStatus    @default(PENDING)
  totalAmount     Float
  notes           String?
  dueDate         DateTime?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  
  client          Client         @relation(fields: [clientId], references: [id])
  orderItems      OrderItem[]
  productionUpdates ProductionUpdate[]
  packages        Package[]
  qualityChecks   QualityCheck[]
  
  @@map("orders")
}

model OrderItem {
  id              String         @id @default(cuid())
  orderId         String
  variantId       String
  quantity        Int
  unitPrice       Float
  totalPrice      Float
  producedQty     Int            @default(0)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  order           Order          @relation(fields: [orderId], references: [id], onDelete: Cascade)
  variant         ProductVariant @relation(fields: [variantId], references: [id])
  packageItems    PackageItem[]

  @@map("order_items")
}

model ProductionUpdate {
  id          String   @id @default(cuid())
  orderId     String
  date        DateTime @default(now())
  itemsProduced Json   // {variantId: quantity}
  notes       String?
  createdBy   String
  createdAt   DateTime @default(now())
  
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  @@map("production_updates")
}

model Package {
  id            String         @id @default(cuid())
  orderId       String
  packageNumber Int
  weight        Float?
  dimensions    String?       // "L x W x H"
  trackingNumber String?
  shippedAt     DateTime?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  order         Order          @relation(fields: [orderId], references: [id], onDelete: Cascade)
  shippingLabels ShippingLabel[]
  packageItems  PackageItem[]

  @@map("packages")
}

model PackageItem {
  id         String  @id @default(cuid())
  packageId  String
  orderItemId String
  quantity   Int

  package    Package    @relation(fields: [packageId], references: [id], onDelete: Cascade)
  orderItem  OrderItem  @relation(fields: [orderItemId], references: [id], onDelete: Cascade)

  @@unique([packageId, orderItemId])
  @@map("package_items")
}

model ShippingLabel {
  id          String   @id @default(cuid())
  packageId   String
  labelData   Json     // Contains all label information
  qrCode      String?
  printedAt   DateTime?
  createdAt   DateTime @default(now())
  
  package     Package  @relation(fields: [packageId], references: [id], onDelete: Cascade)
  
  @@unique([packageId])
  @@map("shipping_labels")
}

model QualityCheck {
  id          String            @id @default(cuid())
  orderId     String
  checkType   String
  status      QualityCheckStatus @default(PENDING)
  inspector   String
  notes       String?
  createdAt   DateTime           @default(now())

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("quality_checks")
}

enum Role {
  USER
  ADMIN
}

enum ProductCategory {
  TSHIRT
  POLO
  BLOUSE
  OTHER
}

enum Size {
  XS
  S  
  M
  L
  XL
  XXL
  XXXL
}

enum FabricType {
  COTTON
  POLYESTER
  COTTON_BLEND
  POLY_BLEND
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  SHIPPED
  DELIVERED
  CANCELLED
}

enum QualityCheckStatus {
  PENDING
  PASSED
  FAILED
}